@import url('https://fonts.googleapis.com/css2?family=Oswald:wght@400;600;700&family=Roboto:wght@400;500&display=swap')

color-secundario = #F2B0D6
color-primario = #F6DAEA
color-claro = #FFFFFF
color-oscuro = #000000
color-1 = #000000ED
color-2 = #4A4548
color-3 = #00000029

font-size = 16px 
font-titles = font-size 'Oswald', sans-serif
font-big-titles = font-size + 20 'Oswald', sans-serif
font-paragraphs = 'Roboto', sans-serif

titulos()
    font font-big-titles
    text-transform uppercase
    color color-2
    font-weight 700

alineacion(d)
    display flex
    flex-direction d

*
    margin 0
    padding 0
    box-sizing border-box
    text-decoration none

