@import _plantilla

.hero
    width 100%
    background-color color-primario
    height 550px
    display flex
    justify-content center
    box-shadow: 0px 10px 6px #00000029;
    opacity 1
    &__imagen
        height 510px
        width 482px

.topProductos
    margin 0 auto
    height 600px
    width: 80%
    alineacion(column)
    font-family font-paragraphs
    &__titulo
        margin-top 65px
        align-self center
        titulos()
    &__contenedor__productos
        display flex
        align-items center
        justify-content space-around
        height 550px
        padding 0 25px
        .contenedorProducto
            width 300px
            height 390px
            text-align center
            a
                color color-1
            img
                height 300px
                margin-top 20px
            h3
                margin-top -35px

.marcas
    margin 0 auto
    width 80% 
    height 550px
    alineacion(column)
    h2
        align-self center
        margin-top 25px
        titulos()
    &__contenedor
        alineacion(row)
        justify-content space-around
        align-items center
        height 400px
